<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paul.myapp">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_logofinal"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.RegisterActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".view.MyCalendarActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".view.SearchActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".view.ActivityAbout"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.ActivityPersonEdit"
            android:screenOrientation="portrait" />


        <activity
            android:name=".view.ActivitySuggestion"
            android:screenOrientation="portrait" />

        <activity android:name=".view.RewardActivity"
            android:screenOrientation="portrait"/>

       <receiver android:name=".utils.NotificationEventReceiver"/>



    </application>

</manifest>
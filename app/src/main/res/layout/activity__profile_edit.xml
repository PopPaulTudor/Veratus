<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tool_bar_edit"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="4dp"
            android:src="@mipmap/ic_logofinal" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRegister"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/app_bar_register"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            fab:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appBarLayout2">


                <TextView
                    android:id="@+id/usernameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/usernameEdit"
                    android:layout_alignTop="@+id/usernameEdit"
                    android:layout_toEndOf="@+id/usernameEdit" />


                <TextView
                    android:id="@+id/passError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/passwordEdit"
                    android:layout_alignTop="@+id/passwordEdit"
                    android:layout_toEndOf="@+id/passwordEdit" />


                <EditText
                    android:id="@+id/usernameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ems="8"
                    android:hint="Username"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"

                    android:layout_marginTop="80dp"
                    android:ems="8"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/light_gry" />


                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"

                    android:layout_marginTop="140dp"
                    android:ems="8"
                    android:hint="Last Name"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/nameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/prenameEdit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/nameEdit"
                    android:layout_toEndOf="@+id/nameEdit" />


                <EditText
                    android:id="@+id/prenameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="10dp"

                    android:ems="8"
                    android:hint="First Name"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/prenameError"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/prenameEdit"
                    android:layout_toEndOf="@+id/prenameEdit" />


                <EditText
                    android:id="@+id/ageEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"

                    android:layout_marginTop="260dp"
                    android:ems="8"
                    android:hint="Age"
                    android:inputType="numberDecimal" />


                <EditText
                    android:id="@+id/yearEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:layout_toStartOf="@+id/ageError"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:hint="Current study year"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/yearError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/yearEdit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/yearEdit"
                    android:layout_toEndOf="@+id/yearEdit" />


                <TextView
                    android:id="@+id/ageError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ageEdit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/ageEdit"
                    android:layout_toEndOf="@+id/ageEdit" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cardViewRegister"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="139dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:src="@drawable/ic_edit_black_24px"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:fab_progress_backgroundColor="@color/colorPrimary" />

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />


</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">


    <include
        android:id="@+id/app_bar_register"
        layout="@layout/app_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/buttonRegister"
        android:layout_below="@+id/app_bar_register"
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        android:src="@mipmap/ic_logofinal" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/app_bar_register"
        android:elevation="3dp"
        app:cardCornerRadius="10dp"
        fab:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout2">


            <TextView
                android:id="@+id/usernameError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/userTextLayout"
                android:layout_alignTop="@+id/userTextLayout"
                android:layout_toEndOf="@+id/userTextLayout" />


            <TextView
                android:id="@+id/passError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/passTextLayout"
                android:layout_alignTop="@+id/passTextLayout"
                android:layout_toEndOf="@+id/passTextLayout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/userTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/usernameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ems="8"
                    android:hint="Username"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp">

                <EditText
                    android:id="@+id/passwordCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ems="8"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/light_gry" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140sp">

                <EditText
                    android:id="@+id/nameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ems="8"
                    android:hint="Last Name"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/nameError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nameTextLayout"
                android:layout_alignTop="@+id/nameTextLayout"
                android:layout_toEndOf="@+id/nameTextLayout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/preTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200sp">

                <EditText
                    android:id="@+id/prenameCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ems="8"
                    android:hint="First Name"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/prenameError"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignBottom="@+id/preTextLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/preTextLayout"
                android:layout_toEndOf="@+id/preTextLayout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ageTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260sp">
            <EditText
                android:id="@+id/ageCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ems="8"
                android:hint="Age"
                android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/ageError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ageTextLayout"
                android:layout_alignTop="@+id/ageTextLayout"
                android:layout_toEndOf="@+id/ageTextLayout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/yearTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp">

            <EditText
                android:id="@+id/yearCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_toStartOf="@+id/ageError"
                android:ems="8"
                android:hint="Current study year"
                android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/yearError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/yearTextLayout"
                android:layout_alignTop="@+id/yearTextLayout"
                android:layout_toEndOf="@+id/yearTextLayout" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="139dp"
        android:layout_centerHorizontal="true"
        android:background="@color/fun"
        android:elevation="4dp"
        android:src="@drawable/ic_check_black_24dp"
        app:backgroundTint="@color/fun"
        app:fabSize="normal"
        app:fab_progress_backgroundColor="@color/fun" />


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_register"
        android:clickable="false"
        android:elevation="10dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/ScheduleSuggestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/suggestion_circle"
        android:text="Sport man " />

    <Button
        android:id="@+id/ScheduleSuggestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ScheduleSuggestion1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@drawable/suggestion_circle"

        android:text="Study time" />

    <Button
        android:id="@+id/ScheduleSuggestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ScheduleSuggestion1"
        android:layout_below="@+id/ScheduleSuggestion1"
        android:layout_marginTop="128dp"
        android:background="@drawable/suggestion_circle"
        android:text="Sleep the day" />

    <Button
        android:id="@+id/ScheduleSuggestion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ScheduleSuggestion3"
        android:layout_alignStart="@+id/ScheduleSuggestion2"
        android:background="@drawable/suggestion_circle"
        android:text="School break" />

    <FrameLayout
        android:id="@+id/frame_layout_suggestion"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:clickable="false"/>

</RelativeLayout>